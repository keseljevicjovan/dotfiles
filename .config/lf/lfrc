# Core
set ratios "1:2:3"

set icons          true
set ignorecase     true
set drawbox        true
set dircounts      true
set info           size:time
set number         true
set relativenumber true

cmd open ${{
    ~/.config/lf/opener "$f"
}}

set cleaner '~/.config/lf/cleaner'
set previewer '~/.config/lf/preview'

# Keybindings
map gD cd ~/downloads
map gS cd ~/.local/bin/scripts
map gW cd ~/.local/share/wallpapers
map gb $lf -remote "send $id cd $OLDPWD" 
map gc cd ~/.config
map gd cd ~/dev
map gh cd ~/hacking
map gm cd ~/music
map go cd ~/documents/obsidian
map gp cd ~/documents/pdfs
map gs cd ~/pictures/screenshots
map gv cd ~/videos/screen-recordings
map gw cd ~/dev/web-server

map C clear

map A :rename; cmd-end
map c push A<c-u>
map I :rename; cmd-home

map M push %mkdir<space>""<left>

map x $$f
map X !$f

map dd cut
map D delete

map Y $mime=$(file --mime-type -Lb "$f"); xclip -selection clipboard -t "$mime" -i "$f"

map e $nvim "$f"
